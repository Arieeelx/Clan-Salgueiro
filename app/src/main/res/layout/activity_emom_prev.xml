<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emom_prev"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/degradado">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:background="@drawable/imagen_alpha"

        android:layout_marginTop="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_emom_prev"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_emom_prev"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Volver atrÃ¡s"

        app:titleTextColor="@android:color/white"
        android:background="@color/black"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:id="@+id/box1_emom_prev"

        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:orientation="vertical"


        android:layout_marginTop="150dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Rondas"
            android:textColor="@color/white"

            android:gravity="center"/>

        <NumberPicker
            android:id="@+id/numpickrondas_emom_prev"
            android:layout_width="wrap_content"
            android:layout_height="90dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Minutos"
                    android:textColor="@color/white"

                    android:gravity="center"/>

                <NumberPicker
                    android:id="@+id/numpickminutos_emom_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Segundos"
                    android:textColor="@color/white"

                    android:gravity="center"/>

                <NumberPicker
                    android:id="@+id/numpicksegundos_emom_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>










            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bottom1_emom_prev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:text="ðŸ”¥ Â¡GO! ðŸ”¥"

        android:layout_marginLeft="12dp"
