<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/degradado">

    <LinearLayout
        android:id="@+id/box1"

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical"

        android:layout_marginTop="60dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        android:background="@drawable/shadows">

        <TextView
            android:id="@+id/introbox1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="¿Qué deseas realizar hoy?"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="monospace" />

        <LinearLayout
            android:id="@+id/boxBottom1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bottom1"

                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_margin="12dp"

                android:text="MÉTODO BILBO"
                android:textColor="@color/white"
                android:backgroundTint="@color/redblack"/>

            <Button
                android:id="@+id/bottom2"

                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_margin="12dp"

                android:text="TABATA"
                android:textColor="@color/white"
                android:backgroundTint="@color/redblack"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxBottom2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bottom3"

                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_margin="12dp"

                android:text="EMOM"
                android:textColor="@color/white"
                android:backgroundTint="@color/redblack"/>

            <Button
                android:id="@+id/bottom4"

                android:layout_width="165dp"
                android:layout_height="wrap_content"

                android:layout_margin="12dp"

                android:text="AMRAP"
                android:textColor="@color/white"
                android:backgroundTint="@color/redblack"/>

        </LinearLayout>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>