<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/degradado">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_menu"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Menú"

            app:titleTextColor="@android:color/white"
            android:background="@color/black"
            
            android:layout_marginBottom="6dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/box1_menu"/>


        <LinearLayout
            android:id="@+id/box1_menu"

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical"

            android:layout_marginTop="60dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            android:background="@drawable/shadows">


            <TextView
                android:id="@+id/textbox1_menu"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="¿Qué deseas realizar hoy?"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="monospace" />

            <LinearLayout
                android:id="@+id/boxBottom1_menu"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bottom1_menu"

                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="12dp"

                    android:text="MÉTODO BILBO"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/redblack"/>

                <Button
                    android:id="@+id/bottom2_menu"

                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="12dp"

                    android:text="TABATA"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/redblack"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boxBottom2_menu"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bottom3_menu"

                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="12dp"

                    android:text="EMOM"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/redblack"/>

                <Button
                    android:id="@+id/bottom4_menu"

                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="12dp"

                    android:text="AMRAP"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/redblack"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2_menu"

            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical"

            android:layout_marginTop="60dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/box1_menu"
            app:layout_constraintTop_toBottomOf="@id/box1_menu"

            android:background="@drawable/shadows">

            <TextView
                android:id="@+id/texto1box2_menu"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Métricas máximas"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>